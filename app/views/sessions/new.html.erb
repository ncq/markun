<%== params[:alert] + "<br><br>" if params[:alert]%>


<h1>ログイン</h1>

<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "ログイン" %>
    <%= link_to "アカウントをお持ちでない方はこちら", new_user_path %>
  </div>
<% end %>




